<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.overlayautoclicker">

    <!-- Allow showing overlay on top of other apps -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:label="Overlay Auto Clicker"
        android:icon="@android:drawable/sym_def_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Our overlay service (shows the draggable box) -->
        <service
            android:name=".OverlayService"
            android:exported="false" />

        <!-- Our screen capture service (will read pixels from the screen) -->
        <service
            android:name=".ScreenCaptureService"
            android:exported="false" />

    </application>

</manifest>
